{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@backend/*": ["src/backend/*"],
            "@functions/*": ["src/backend/functions/*"],
            "@routes/*": ["src/backend/routes/*"],
            "@model/*": ["src/model/*"],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}